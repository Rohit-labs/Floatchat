@tailwind base;
@tailwind components;
@tailwind utilities;

/* Definition of the design system. All colors, gradients, fonts, etc should be defined here. 
All colors MUST be HSL.
*/

@layer base {
  :root {
    /* FloatChat color palette - Light Mode */
    --background: 210 20% 98%; /* #F9FAFB equivalent */
    --foreground: 220 27% 16%; /* #111827 equivalent */

    --card: 0 0% 100%;
    --card-foreground: 220 27% 16%;

    --popover: 0 0% 100%;
    --popover-foreground: 220 27% 16%;

    /* Float Blue Primary */
    --primary: 217 91% 60%; /* #3B82F6 */
    --primary-foreground: 210 20% 98%;

    /* Aqua Cyan Secondary */
    --secondary: 189 94% 43%; /* #06B6D4 */
    --secondary-foreground: 220 27% 16%;

    /* Subtle muted */
    --muted: 210 20% 95%;
    --muted-foreground: 215 16% 47%;

    /* Lavender Glow Accent */
    --accent: 271 76% 64%; /* #A855F7 */
    --accent-foreground: 210 20% 98%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;

    --border: 214 32% 91%;
    --input: 214 32% 91%;
    --ring: 217 91% 60%;

    /* FloatChat gradients */
    --gradient-float: linear-gradient(135deg, #3B82F6, #06B6D4, #A855F7);
    --gradient-float-subtle: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(6, 182, 212, 0.1), rgba(168, 85, 247, 0.1));

    /* Interactive states */
    --hover-primary: 217 91% 55%;
    --focus-ocean: hsl(205, 85%, 35%);

    /* Shadows */
    --shadow-ocean: 0 10px 30px -10px hsl(205, 85%, 25%, 0.3);
    --shadow-float: 0 5px 20px -5px hsl(185, 85%, 35%, 0.4);

    --radius: 0.5rem;

    --sidebar-background: 0 0% 98%;

    --sidebar-foreground: 240 5.3% 26.1%;

    --sidebar-primary: 240 5.9% 10%;

    --sidebar-primary-foreground: 0 0% 98%;

    --sidebar-accent: 240 4.8% 95.9%;

    --sidebar-accent-foreground: 240 5.9% 10%;

    --sidebar-border: 220 13% 91%;

    --sidebar-ring: 217.2 91.2% 59.8%;
  }

  .dark {
    /* FloatChat color palette - Dark Mode */
    --background: 224 71% 5%; /* #0F172A equivalent */
    --foreground: 213 27% 95%; /* #F3F4F6 equivalent */

    --card: 224 71% 6%;
    --card-foreground: 213 27% 95%;

    --popover: 224 71% 5%;
    --popover-foreground: 213 27% 95%;

    /* Float Blue Primary - adjusted for dark mode */
    --primary: 217 91% 60%; /* #3B82F6 */
    --primary-foreground: 224 71% 5%;

    /* Aqua Cyan Secondary - adjusted for dark mode */
    --secondary: 189 94% 43%; /* #06B6D4 */
    --secondary-foreground: 224 71% 5%;

    /* Muted for dark mode */
    --muted: 223 47% 11%;
    --muted-foreground: 215 20% 65%;

    /* Lavender Glow Accent - adjusted for dark mode */
    --accent: 271 76% 64%; /* #A855F7 */
    --accent-foreground: 224 71% 5%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 213 27% 95%;

    --border: 223 47% 15%;
    --input: 223 47% 15%;
    --ring: 217 91% 60%;

    /* Sidebar colors for dark mode */
    --sidebar-background: 224 71% 6%;
    --sidebar-foreground: 213 27% 95%;
    --sidebar-primary: 217 91% 60%;
    --sidebar-primary-foreground: 224 71% 5%;
    --sidebar-accent: 223 47% 11%;
    --sidebar-accent-foreground: 213 27% 95%;
    --sidebar-border: 223 47% 15%;
    --sidebar-ring: 217 91% 60%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
  }
}
